#
# Single rule parameter configuration
#

. ${REGRESSDIR}include/regression.conf

#INTERFACE
interface eth0 myeth0
	ipv4 server tftp accept ZZ4
	ipv4 server ssh accept ZZ4
	ipv4 server eserver accept ZZ4
	ipv4 server hylafax accept ZZ4
if ipv6_capable; then
	ipv6 server tftp accept ZZ6
	ipv6 server ssh accept ZZ6
	ipv6 server eserver accept ZZ6
	ipv6 server hylafax accept ZZ6
fi

interface eth1 myeth1
	ipv4 client tftp accept ZZ4
	ipv4 client ssh accept ZZ4
	ipv4 client eserver accept ZZ4
	ipv4 client hylafax accept ZZ4
if ipv6_capable; then
	ipv6 client tftp accept ZZ6
	ipv6 client ssh accept ZZ6
	ipv6 client eserver accept ZZ6
	ipv6 client hylafax accept ZZ6
fi
#END INTERFACE

#ROUTER
router e2toe3 inface eth2 outface eth3
	ipv4 server tftp accept ZZ4
	ipv4 server ssh accept ZZ4
	ipv4 server eserver accept ZZ4
	ipv4 server hylafax accept ZZ4
if ipv6_capable; then
	ipv6 server tftp accept ZZ6
	ipv6 server ssh accept ZZ6
	ipv6 server eserver accept ZZ6
	ipv6 server hylafax accept ZZ6
fi

router e4toe5 inface eth4 outface eth5
	ipv4 client tftp accept ZZ4
	ipv4 client ssh accept ZZ4
	ipv4 client eserver accept ZZ4
	ipv4 client hylafax accept ZZ4
if ipv6_capable; then
	ipv6 client tftp accept ZZ6
	ipv6 client ssh accept ZZ6
	ipv6 client eserver accept ZZ6
	ipv6 client hylafax accept ZZ6
fi
#END ROUTER
